<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/quests/quests.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/quests/quests.js" />
	</scripts>

	<Panel class="RootPanel">
		<Panel id="MessagePanel" class="MessagePanel">
			<Label id="MessagePanelName" text=""/>
			<Label id="MessagePanelText" text=""/>			
		</Panel>

		<Panel id="QuestMsgPanel" class="QuestMsgPanel">
			<Panel id="QuestMsgPanelLeft" class="QuestMsgPanelLeft">
				<ToggleButton id="QuestButton_1" onactivate="QuestCursedActivate()">
					<Label id="QuestButtonText_1" text="Press to Activate"/>
				</ToggleButton>
				<ToggleButton id="QuestButton_2" onactivate="QuestChurchActivate()">
					<Label id="QuestButtonText_1" text="Press to Activate"/>
				</ToggleButton>
				<ToggleButton id="QuestButton_3" onactivate=" QuestCemetryActivate()">
					<Label id="QuestButtonText_1" text="Press to Activate"/>
				</ToggleButton>	
				<ToggleButton id="QuestButton_4" onactivate="QuestAlchemyActivate()">
					<Label id="QuestButtonText_1" text="Press to Activate"/>
				</ToggleButton>				
				<ToggleButton id="QuestButton_5" onactivate="QuestHelpActivate()">
					<Label id="QuestButtonText_2" text="GAME HELP"/>
				</ToggleButton>																				
			</Panel>

			<Panel id="QuestMsgPanelRight" class="QuestMsgPanelRight">
				<Label id="QuestMsgPanelName" text=""/>
				<Label id="QuestMsgPanelText" text=""/>
				<ToggleButton id="QuestMsgButtonClose" text="Close" onactivate="OnCloseQuestMsgPanelRight()"/>	
			</Panel>
		</Panel>
	</Panel>

</root>

